{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "lib": ["DOM","ESNext"],
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "baseUrl": "src",
    "paths": {
      "@tests/*": ["../tests/*"],
      "@/*": ["*"]
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules"
  ]
}
